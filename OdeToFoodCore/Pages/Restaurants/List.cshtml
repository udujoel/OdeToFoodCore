@page
@model OdeToFoodCore.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>

<form method = "get" >
    <div class = "form-group" >
        <div class = "input-group" >
            <input type="search" class="form-control" name="searchTerm" placeholder="Search..." asp-for="SearchTerm"  />
            <span class="input-group-btn">
                <button class="btn btn-default" type = "submit" ><i class="glyphicon glyphicon-search"></i></button>

            </span>
        </div>
    </div>
</form>

<table class = "table table-hover table-striped" >
    <tr>
        <td>#</td>
        <td>Name</td>
        <td>Cuisine</td>
        <td>Location</td>
        <td>Details</td>
        <td>Edit</td>
    </tr>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td> @restaurant.Id</td>
            <td> @restaurant.Name</td>
            <td> @restaurant.Cuisine</td>
            <td> @restaurant.Location</td>
            <td> <a class="btn btn-default" asp-page="./details" asp-route-restaurantid="@restaurant.Id" ><i class="glyphicon glyphicon-zoom-in"></i></a></td>
            <td><a class="btn btn-default" asp-page="./edit" asp-route-restaurantid= "@restaurant.Id"> <i class="glyphicon glyphicon-edit"></i></a></td>
        </tr>
    }
</table>

<br/><br/><br/>
<a class="btn btn-default" asp-page="./edit">Add New </a>




